--><project name="sdhcockpits_buildcallbacks">

	<!-- 
		Called whenever 'ant ear' is used. this callback can be used to modify the content of the ear file

		${ear.path}: 			path to ear
	-->
	<macrodef name="sdhcockpits_before_ear">
		<sequential>

			<!-- you can do anything before the EAR file is being packed -->

		</sequential>
	</macrodef>
	<macrodef name="sdhcockpits_after_build">
		<sequential>

			<if>
				<isset property="ext.cmscockpit.path"/>
				<then>
					<echo level="info" message="sdhcockpits - Copying custom wizard to cmscockpit..."/>
					 <copy todir="${ext.cmscockpit.path}/web/webroot">
						<fileset dir="${ext.sdhcockpits.path}/resources/sdhcockpits/cmscockpit/zul">
							<include name="**/**.*"/>
						</fileset>
					</copy>
					<copy todir="${ext.cmscockpit.path}/web/webroot/cmscockpit/images">
						<fileset dir="${ext.sdhcockpits.path}/resources/sdhcockpits/cmscockpit/images">
							<include name="**/**.*"/>
						</fileset>
					</copy>
				</then>
			</if>

			<impexGenerate extname="sdhcockpits"/>

		</sequential>
	</macrodef>

	<macrodef name="sdhcockpits_before_build">
		<sequential>
			<sdhcockpits_delete_web_dir/>
		</sequential>
	</macrodef>

	<macrodef name="sdhcockpits_after_clean">
		<sequential>
			<sdhcockpits_delete_web_dir/>
			<delete failonerror="false" file="${ext.sdhcockpits.path}/resources-lang/touch_impexgen"/>
		</sequential>
	</macrodef>


	<macrodef name="sdhcockpits_delete_web_dir">
		<sequential>
			<!-- This is required until PLA-10893 is fixed -->
			<echo level="info" message="Removing web directory for extension sdhcockpits"/>
			<delete dir="${ext.sdhcockpits.path}/web" quiet="true"/>
		</sequential>
	</macrodef>
	
	<!-- exclude impex files from localization --> 
	<patternset id="sdhcockpits.localization.pattern">
		<patternset refid="localization.defaultpattern"/>
		<exclude name="**/*.impex"/>
	</patternset>

</project>
