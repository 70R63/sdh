<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<widget-definition id="com.sdh.widgets.explodedpicture"
				   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
				   xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/widget-definition.xsd">
	<!-- id to be used in widgets.xml with widget-definition tag -->

	<name>Exploded Picture Drawing</name>
	<description>Customized exploded picture definition widget.</description>
	<defaultTitle>Exploded Picture</defaultTitle>
	<author>oguzhankinik</author>
	<version>0.1</version>

	<!-- <inputType>net.ycn.ycn.core.model.YcnProductModel</inputType> --> <!-- coming from actions.inputType -->
	<!-- <outputType>java.lang.Object</outputType> --> <!-- type of sending to Controller -->

	<sockets>
		<input id="explodedPictureInput"
			   type="de.hybris.platform.core.model.product.ProductModel"/> <!-- to be used in widgets.xml with widget-definition tag -->
		<output id="explodedPictureOutput"
				type="java.lang.Object"/> <!-- not triggered --> <!-- to be used in widgets.xml with widget-definition tag -->
	</sockets>

	<view src="explodedpic.zul"/>
	<controller class="com.sdh.widgets.explodedpicture.ExplodedPictureController"></controller>

	<!--
    <keywords>
        <keyword>Exploded Picture kkeyword</keyword>
    </keywords>
-->
</widget-definition>