<action-definition id="com.sdh.actions.assemblygroup"
				   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
				   xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/action-definition.xsd">
	<!-- id to be used in widgets.xml with widget-definition tag -->

	<name>Assembly Group</name>
	<description>Customized assembly group action.</description>
	<author>yvn</author>
	<version>0.1</version>

	<!-- canPerform, perform operation defined on this Action class -->
	<actionClassName>com.sdh.actions.assemblygroup.AssemblyGroupAction</actionClassName>
	<inputType>de.hybris.platform.core.model.product.ProductModel</inputType>
	<outputType>java.lang.Object</outputType>

	<iconUri>icons/icon_action_cancel_default.png</iconUri>
	<iconDisabledUri>icons/icon_action_cancel_disabled.png</iconDisabledUri>
	<iconHoverUri>icons/icon_action_cancel_hover.png</iconHoverUri>

	<settings>
		<setting key="viewMode" default-value="iconAndText"/>
	</settings>

	<sockets>
		<output id="assemblyGroupContext"/> <!-- to be used in widgets.xml with widget-definition tag -->
	</sockets>

</action-definition>