<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/widgets.xsd">

    <widget id="sdhbackofficeBpNumberFinder" widgetDefinitionId="com.sdh.widgets.sdhasmbackofficewidget"
            template="false" slotId="cockpitWidgetChildrenInvisible">
        <setting key="socketDataType_$T" type="String">de.hybris.platform.core.model.user.CustomerModel</setting>
        <virtual-sockets />
    </widget>

    <widget id="backofficeSdhBpNumberFinderPopup"
            widgetDefinitionId="com.sdh.widgets.sdhBpNumberFinderPopup"
            slotId="cockpitWidgetChildrenInvisible"
            title="sdh.bpNumberFinder.popup" template="true">

        <instance-settings socketEventRoutingMode="LAST_USED">
            <create onInit="false" reuseExisting="true">
                <all-incoming-events/>
            </create>
            <close>
                <all-outgoing-events/>
            </close>
            <select onInit="false">
                <all-incoming-events/>
            </select>
        </instance-settings>

        <setting key="widgetStyleAttribute" type="String"></setting>
        <setting key="enableAlternativeContainer" type="String">auto</setting>
        <setting key="widgetStyleClass" type="String"></setting>
        <setting key="_width" type="String">1140px</setting>
        <setting key="_height" type="String">650px</setting>
        <virtual-sockets/>
    </widget>


    <widget-connection sourceWidgetId="STUB_com.sdh.widgets.actions.findbpnumberaction"
                       outputId="sdhBpFdrCtx" targetWidgetId="backofficeSdhBpNumberFinderPopup"
                       inputId="inputObject"/>

    <widget-extension widgetId="backofficeMainSlot">
        <widget id="explodedBpFinderWidget" widgetDefinitionId="com.sdh.widgets.explodedbpfinder"
                slotId="cockpitWidgetChildrenInvisible" template="true" title="sdh.bpNumberFinder.popup">
            <instance-settings socketEventRoutingMode="LAST_USED">
                <create onInit="false" reuseExisting="true">
                    <all-incoming-events/>
                </create>
                <select onInit="false">
                    <all-incoming-events/>
                </select>
                <close>
                    <all-outgoing-events/>
                </close>
            </instance-settings>
            <setting key="widgetStyleClass" type="String"></setting>
            <setting key="__externalLocationPath" type="String">extension://platformbackoffice</setting>
            <setting key="widgetStyleAttribute" type="String"></setting>
            <setting key="_width" type="String">500px</setting>
            <setting key="_height" type="String">auto</setting>
            <virtual-sockets/>
        </widget>
    </widget-extension>

    <widget-connection sourceWidgetId="STUB_com.sdh.actions.bpfinder"
                       outputId="bpFinderContext" targetWidgetId="explodedBpFinderWidget"
                       inputId="explodedBpFinderInput"/>

    <widget-extension widgetId="backofficeMainSlot">
        <widget id="sdhAsmBackoffice-perspective"
                widgetDefinitionId="com.sdh.widgets.sdhbackofficewidget"
                slotId="perspectives"
                title="sdh.asm.service.two"
                template="false">
            <setting key="widgetStyleClass" type="String"></setting>
            <setting key="widgetStyleAttribute" type="String"></setting>
            <virtual-sockets/>
        </widget>
        <setting key="widgetStyleClass" type="String"></setting>
        <setting key="perspectiveContainerConfigCtx" type="String">perspective-view-switcher</setting>
        <setting key="widgetStyleAttribute" type="String"></setting>
        <virtual-sockets/>
    </widget-extension>
</widgets>
