										<xf:label ref="label" />
										<xf:value ref="value" />
										<xf:hint ref="hint" />
									</xf:itemset>
								</xf:select>
							</xh:td>
						</xh:tr>
						<xh:tr>
							<xh:td>
								<xf:trigger id="user-address-book-control" bind="user-address-book-bind">
