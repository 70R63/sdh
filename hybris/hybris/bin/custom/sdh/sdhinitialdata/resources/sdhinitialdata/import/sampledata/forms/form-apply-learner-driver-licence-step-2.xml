<xh:html xmlns:xh="http://www.w3.org/1999/xhtml"
         xmlns:ev="http://www.w3.org/2001/xml-events"
         xmlns:exf="http://www.exforms.org/exf/1-0"
         xmlns:fb="http://orbeon.org/oxf/xml/form-builder"
         xmlns:fr="http://orbeon.org/oxf/xml/form-runner"
         xmlns:saxon="http://saxon.sf.net/"
         xmlns:soap="http://schemas.xmlsoap.org/soap/envelope/"
         xmlns:sql="http://orbeon.org/oxf/xml/sql"
         xmlns:xf="http://www.w3.org/2002/xforms"
         xmlns:xi="http://www.w3.org/2001/XInclude"
         xmlns:xs="http://www.w3.org/2001/XMLSchema"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns:xxf="http://orbeon.org/oxf/xml/xforms"
         xmlns:xxi="http://orbeon.org/oxf/xml/xinclude">
    <xh:head>
        <xh:title>Licence details</xh:title>
        <xf:model id="fr-form-model" xxf:expose-xpath-types="true">
            <!-- Main instance -->
            <xf:instance id="fr-form-instance" xxf:exclude-result-prefixes="#all" xxf:index="id">
                <form>
                    <section-1>
                        <control-4/>
                        <radiobutton-1/>
                        <dropdown-licencetype/>
                    </section-1>
                </form>
            </xf:instance>
            <!-- Bindings -->
            <xf:bind id="fr-form-binds" ref="instance('fr-form-instance')">
                <xf:bind id="section-1-bind" name="section-1" ref="section-1">
                    <xf:bind id="radiobutton-1-bind" ref="radiobutton-1" name="radiobutton-1"
                             required="true()"/>
                    <xf:bind id="dropdown-licencetype-bind" ref="dropdown-licencetype"
                             name="dropdown-licencetype"
                             required="true()"/>
                    <xf:bind id="control-4-bind" ref="control-4" name="control-4"/>
                </xf:bind>
            </xf:bind>
            <!-- Metadata -->
            <xf:instance xxf:readonly="true" id="fr-form-metadata" xxf:exclude-result-prefixes="#all">
                <metadata>
                    <application-name>publicsector</application-name>
                    <form-name>Apply-Learner-Driver-Licence-Form-Step-2</form-name>
                    <title xml:lang="en">Licence details</title>
                    <description xml:lang="en">Licence details</description>                    
                    <title xml:lang="fr">Détails du permis</title>
                    <description xml:lang="fr">Détails du permis</description>
                    <title xml:lang="de">Führerscheindetails</title>
                    <description xml:lang="de">Führerscheindetails</description>
                    <title xml:lang="es">Datos del permiso</title>
                    <description xml:lang="es">Datos del permiso</description>
                    <singleton>false</singleton>
                </metadata>
            </xf:instance>
            <!-- Attachments -->
            <xf:instance id="fr-form-attachments" xxf:exclude-result-prefixes="#all">
                <attachments>
                    <css mediatype="text/css" filename="" size=""/>
                    <pdf mediatype="application/pdf" filename="" size=""/>
                </attachments>
            </xf:instance>
            <!-- All form resources -->
            <!-- Don't make readonly by default in case a service modifies the resources -->
            <xf:instance id="fr-form-resources" xxf:readonly="false" xxf:exclude-result-prefixes="#all">
                <resources>
                    <resource xml:lang="en">
                        <control-4>
                            <label>Fields marked * are required</label>
                            <hint/>
                        </control-4>
                        <radiobutton-1>
                            <label>Have you ever been disqualified, prohibited or refused from driving a motor vehicle/vessel or riding a motorcycle?</label>
                            <hint/>
                            <alert>Please select an option</alert>
                            <item>
                                <label>Yes</label>
                                <hint/>
                                <value>1</value>
                            </item>
                            <item>
                                <label>No</label>
                                <hint/>
                                <value>2</value>
                            </item>
                        </radiobutton-1>
                        <dropdown-licencetype>
                            <label>What class of license are you applying for?</label>
                            <hint/>
                            <alert>Please select an option</alert>
                            <item>
                                <label>Car</label>
                                <value>1</value>
                            </item>
                            <item>
                                <label>Motor Cycle</label>
                                <value>2</value>
                            </item>
                            <item>
                                <label>Heavy Combination</label>
                                <value>3</value>
                            </item>
                        </dropdown-licencetype>
                        <section-1>
                            <label>License details</label>
                        </section-1>
                    </resource>       
                    <resource xml:lang="fr">
                        <control-4>
                            <label>Les zones signalées par * sont obligatoires.</label>
                            <hint/>
                        </control-4>
                        <radiobutton-1>
                            <label>Vous êtes-vous déjà vu interdire ou refuser de conduire un véhicule/bateau à moteur ou une moto ?</label>
                            <hint/>
                            <alert>Veuillez sélectionner une option</alert>
                            <item>
                                <label>Oui</label>
                                <hint/>
                                <value>1</value>
                            </item>
                            <item>
                                <label>Non</label>
                                <hint/>
                                <value>2</value>
                            </item>
                        </radiobutton-1>
                        <dropdown-licencetype>
                            <label>Quelle classe de permis demandez-vous ?</label>
                            <hint/>
                            <alert>Veuillez sélectionner une option</alert>
                            <item>
                                <label>Voiture</label>
                                <value>1</value>
                            </item>
                            <item>
                                <label>Moto</label>
                                <value>2</value>
                            </item>
                            <item>
                                <label>Semi ou porteur + remorque (HC)</label>
                                <value>3</value>
                            </item>
                        </dropdown-licencetype>
                        <section-1>
                            <label>Détails du permis</label>
                        </section-1>
                    </resource> 
                    <resource xml:lang="de">
                         <control-4>
                            <label>Mit einem * gekennzeichnete Felder sind Pflichtfelder.</label>
                            <hint/>
                        </control-4>
                        <radiobutton-1>
                            <label>Wurden Ihnen das Fahren eines Kraftfahrzeugs/Motorschiffs oder Motorrads jemals (mit oder ohne Führerscheinentzug) verboten oder verweigert?</label>
                            <hint/>
                            <alert>Wählen Sie eine Option.</alert>
                            <item>
                                <label>Ja</label>
                                <hint/>
                                <value>1</value>
                            </item>
                            <item>
                                <label>Nein</label>
                                <hint/>
                                <value>2</value>
                            </item>
                        </radiobutton-1>
                        <dropdown-licencetype>
                            <label>Welche Führerscheinklasse beantragen Sie?</label>
                            <hint/>
                            <alert>Wählen Sie eine Option.</alert>
                            <item>
                                <label>Personenkraftwagen</label>
                                <value>1</value>
                            </item>
                            <item>
                                <label>Motorrad</label>
                                <value>2</value>
                            </item>
                            <item>
                                <label>Schwere Fahrzeugkombination</label>
                                <value>3</value>
                            </item>
                        </dropdown-licencetype>
                        <section-1>
                            <label>Führerscheindetails</label>
                        </section-1>
                    </resource> 
                    <resource xml:lang="es">
                         <control-4>
                            <label>Los campos marcados con * son obligatorios</label>
                            <hint/>
                        </control-4>
                        <radiobutton-1>
                            <label>¿Ha sido alguna vez incapacitado o rechazado para conducir un vehículo/embarcación a motor o una motocicleta o se le ha prohibido hacerlo?</label>
                            <hint/>
                            <alert>Seleccione una opción</alert>
                            <item>
                                <label>Sí</label>
                                <hint/>
                                <value>1</value>
                            </item>
                            <item>
                                <label>No</label>
                                <hint/>
                                <value>2</value>
                            </item>
                        </radiobutton-1>
                        <dropdown-licencetype>
                            <label>¿Qué tipo de permiso solicita?</label>
                            <hint/>
                            <alert>Seleccione una opción</alert>
                            <item>
                                <label>Automóvil</label>
                                <value>1</value>
                            </item>
                            <item>
                                <label>Motocicleta</label>
                                <value>2</value>
                            </item>
                            <item>
                                <label>Vehículo pesado</label>
                                <value>3</value>
                            </item>
                        </dropdown-licencetype>
                        <section-1>
                            <label>Datos del permiso</label>
                        </section-1>
                    </resource>
                </resources>
            </xf:instance>
            <!-- Utility instances for services -->
            <xf:instance id="fr-service-request-instance" xxf:exclude-result-prefixes="#all">
                <request/>
            </xf:instance>
            <xf:instance id="fr-service-response-instance" xxf:exclude-result-prefixes="#all">
                <response/>
            </xf:instance>
        </xf:model>
    </xh:head>
    <xh:body>
        <fr:view>
            <fr:body xmlns:xbl="http://www.w3.org/ns/xbl"
                     xmlns:oxf="http://www.orbeon.com/oxf/processors"
                     xmlns:p="http://www.orbeon.com/oxf/pipeline">
                <fr:section id="section-1-control" bind="section-1-bind">
                    <xf:label ref="$form-resources/section-1/label"/>
                    <fr:grid>
                        <xh:tr>
                            <xh:td>
                                <xf:output id="control-4-control" bind="control-4-bind">
                                    <xf:label ref="$form-resources/control-4/label"/>
                                    <xf:hint ref="$form-resources/control-4/hint"/>
                        
                                    <xf:alert ref="$fr-resources/detail/labels/alert"/>
                                </xf:output>
                            </xh:td>
                        </xh:tr>
                        <xh:tr>
                            <xh:td>
                                <xf:select1 id="radiobutton-1-control" appearance="full" bind="radiobutton-1-bind">
                                    <xf:label ref="$form-resources/radiobutton-1/label"/>
                                    <xf:hint ref="$form-resources/radiobutton-1/hint"/>
                                    <xf:alert ref="$form-resources/radiobutton-1/alert"/>
                                    <xf:itemset ref="$form-resources/radiobutton-1/item">
                                        <xf:label ref="label"/>
                                        <xf:value ref="value"/>
                                        <xf:hint ref="hint"/>
                                    </xf:itemset>
                                </xf:select1>
                            </xh:td>
                            
                        </xh:tr>
                        <xh:tr>
                            <xh:td>
                                <fr:dropdown-select1 xmlns:xxbl="http://orbeon.org/oxf/xml/xbl" id="dropdown-licencetype-control"
                                                     bind="dropdown-licencetype-bind">
                                    <xf:label ref="$form-resources/dropdown-licencetype/label"/>
                                    <xf:hint ref="$form-resources/dropdown-licencetype/hint"/>
                                    <xf:alert ref="$form-resources/dropdown-licencetype/alert"/>
                                    <xf:itemset ref="$form-resources/dropdown-licencetype/item">
                                        <xf:label ref="label"/>
                                        <xf:value ref="value"/>
                                    </xf:itemset>
                                </fr:dropdown-select1>
                            </xh:td>
                            
                        </xh:tr>
                    </fr:grid>
                </fr:section>
            </fr:body>
        </fr:view>
    </xh:body>
</xh:html>
