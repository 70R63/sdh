                        <first-name>
                            <label>Vorname</label>
                            <hint/>
                            <alert>Die Länge des Vor- und Nachnamens darf zusammen 255 Zeichen nicht überschreiten.</alert>
                            <alert>Geben Sie einen Vornamen ein.</alert>
                        </first-name>
                        <last-name>
                            <label>Nachname</label>
                            <hint/>
                            <alert>Die Länge des Vor- und Nachnamens darf zusammen 255 Zeichen nicht überschreiten.</alert>
                            <alert>Geben Sie einen Vornamen ein.</alert>
                        </last-name>
                        <dropdown-orgtype>
                            <label>Organisationsart</label>
                            <hint/>
                            <alert>Wählen Sie eine Option.</alert>
                            <item>
                                <label>Einzelperson</label>
                                <value>1</value>
                            </item>
                            <item>
                                <label>Gemeinschaft</label>
                                <value>2</value>
