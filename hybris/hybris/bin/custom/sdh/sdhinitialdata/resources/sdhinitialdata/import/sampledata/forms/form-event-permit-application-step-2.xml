                        </control-19>
                        <control-7>
                            <label>&lt;b&gt;&lt;/b&gt;&lt;h3&gt;&lt;b&gt;Applicant Details&lt;/b&gt;&lt;/h3&gt;</label>
                            <hint/>
                        </control-7>
                        <section-1>
                            <label>Applicant Details</label>
                        </section-1>
                        <dropdown-title>
                            <label>Title</label>
                            <hint/>
                            <alert>Please select a title</alert>
                            <item>
                                <label>Mr</label>
                                <value>1</value>
                            </item>
                            <item>
                                <label>Ms</label>
                                <value>2</value>
                            </item>
                            <item>
                                <label>Mrs</label>
                                <value>3</value>
